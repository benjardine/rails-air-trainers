
<div class="index-container">
  <div id="myBtnContainer">
    <%= link_to "Yoga", training_sessions_path(:query => "Yoga"), class:"btn btn-primary" %>
    <%= link_to "Boxing", training_sessions_path(:query => "Boxing"), class:"btn btn-primary" %>

    <div class="cards-container">
      <h2 class="section-title">Training next to you</h2>
      <%= link_to "+Add a New Session", new_training_session_path %>
      <%= render "shared/card", t_session: @t_session %>
    </div>
  </div>




  <div class="map border">
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
